
<h1>Showing product with id#<%= @product.id %>  </h1>

<h3>Name: <%= @product['name'] %></h3>
<h3>Description: <%= @product[:description] %></h3>
<h3>Price: $<%= @product.price %></h3>
<h3>Category: <%= @product.category.name %></h3>
<br>
<a href="/products">Back</a>

<h1 style= "color: red">Comments</h1>

<form class="" action="/comment/<%= @product.id %>" method="post">
  <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
  <textarea name="comment" rows="8" cols="80"></textarea>
  <input type="submit" name="" value="Submit Comment">
</form>

<% @comments.each do |comment| %>

<div class="comments">
  <h4>Comment: <%=comment.comment%></h4>
  <h5>Posted At: <%=comment.created_at%></h4>
</div>

<% end %>
<br>
