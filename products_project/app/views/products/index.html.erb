<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Products</title>
  </head>
  <body>
    <div class="container">
  <h2>Listing Products</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Category</th>
        <th>Options</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>

      <tr>
        <td><%=product.name%></td>
        <td><%=product['description']%></td>
        <td>$ <%=product[:price]%></td>
        <td><%=product.category.name%></td>
        <td><a href="/products/<%=product.id%>">Show</a> | <a href="/products/<%=product.id%>/edit">Edit</a> | <a href="/destroy/<%=product.id%>">Destroy</a></td>
      </tr>

      <% end %>
    </tbody>
  </table>
  <br>
  <br>
  <a href="/products/new">Add New Product</a>
</div>


  </body>
</html>
